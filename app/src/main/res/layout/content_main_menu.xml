<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.groupwork.gymlads.MainMenu"
    tools:showIn="@layout/activity_main_menu">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="16dp">

        <ImageButton
            android:id="@+id/userProfileButton"
            android:layout_width="93dp"
            android:layout_height="56dp"
            android:layout_alignEnd="@+id/textView3"
            android:layout_alignRight="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="12dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/user_icon" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/userPlanButton"
            android:layout_alignStart="@+id/userPlanButton"
            android:layout_below="@+id/personalisedPlanButton"
            android:layout_marginTop="15dp"
            android:text="@string/view_progress_report_label"
            android:textColor="@android:color/background_dark"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageButton
            android:id="@+id/progressReportButton"
            android:layout_width="98dp"
            android:layout_height="62dp"
            android:layout_alignTop="@+id/videoDemonButton"
            android:layout_marginLeft="62dp"
            android:layout_marginStart="62dp"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/graph" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/userPlanButton"
            android:layout_alignLeft="@+id/userPlanButton"
            android:layout_alignStart="@+id/userPlanButton"
            android:layout_marginBottom="13dp"
            android:text="@string/user_plan_label"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/personalisedPlanButton"
            android:layout_width="99dp"
            android:layout_height="62dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="90dp"
            android:layout_height="19dp"
            android:layout_alignLeft="@+id/videoDemonButton"
            android:layout_alignStart="@+id/videoDemonButton"
            android:layout_below="@+id/progressReportButton"
            android:layout_marginTop="29dp"
            android:text="@string/user_profile_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignLeft="@+id/personalisedPlanButton"
            android:layout_alignStart="@+id/personalisedPlanButton"
            android:text="@string/personalised_plan_label"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/videoDemonButton"
            android:layout_width="102dp"
            android:layout_height="54dp"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="15dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/video_icon"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="322dp" />

        <ImageButton
            android:id="@+id/userPlanButton"
            android:layout_width="97dp"
            android:layout_height="61dp"
            android:layout_alignLeft="@+id/progressReportButton"
            android:layout_alignStart="@+id/progressReportButton"
            android:layout_alignTop="@+id/personalisedPlanButton"
            app:srcCompat="@drawable/penguins" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView4"
            android:layout_alignBottom="@+id/textView4"
            android:layout_alignLeft="@+id/personalisedPlanButton"
            android:layout_alignStart="@+id/personalisedPlanButton"
            android:text="@string/video_demonstration_label"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="250dp" />

        <ImageButton
            android:id="@+id/weightTrackerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView7"
            android:layout_alignRight="@+id/textView7"
            android:layout_alignTop="@+id/textView3"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/weightTrackerButton"
            android:layout_alignLeft="@+id/progressReportButton"
            android:layout_alignStart="@+id/progressReportButton"
            android:text="Weight Tracker" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
